GET        /                        controllers.AppController.index
GET        /discussion              controllers.AppController.discussionPage
GET        /discussions             controllers.AppController.articlesPage
GET        /discussion/:uuid        controllers.AppController.discussion(uuid: String)
POST       /opinion/add             controllers.AppController.addOpinion

# Assests
GET        /css/*file              @controllers.Assets.at(path="/public/css/", file)
GET        /fonts/*file            @controllers.Assets.at(path="/public/fonts/", file)
GET        /img/*file              @controllers.Assets.at(path="/public/img/", file)
GET        /js/*file               @controllers.Assets.at(path="/public/js/", file)